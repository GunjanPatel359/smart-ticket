enum AvailabilityStatus {
  available
  busy
  in_meeting
  on_break
  end_of_shift
  focus_mode
}

enum SkillLevel {
  junior
  mid
  senior
  expert
}

enum TicketStatus {
  new
  assigned
  in_progress
  on_hold
  resolved
  closed
  cancelled
}

enum Priority {
  low
  normal
  high
  critical
}

enum Impact {
  low
  medium
  high
  critical
}

enum Urgency {
  low
  normal
  high
  critical
}

//
// MODELS
//

model User {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(255)
  email     String    @unique @db.VarChar(255)
  contactNo String?   @db.VarChar(20) @map("contact_no")
  // status    Boolean   @default(true)
  // role      Role      @default(user)
  password  String    @db.VarChar(255)
  department String?  @db.VarChar(100)

  // Relations
  requestedTickets Ticket[]   @relation("UserTickets")
  technician       Technician?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Technician {
  id                  Int       @id @default(autoincrement())
  name                String    @db.VarChar(255)
  userId              Int       @map("user_id")
  assignedTicketsTotal Int      @default(0)
  assignedTickets     Json?     @default("[]")
  skills              Json?     @default("[]")
  workload            Int       @default(0)
  availabilityStatus  AvailabilityStatus @default(available) @map("availability_status")
  skillLevel          SkillLevel @default(junior) @map("skill_level")
  specialization      String?   @db.VarChar(255)
  isActive            Boolean   @default(true) @map("is_active")

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  tickets Ticket[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId])
  @@map("technicians")
}

model Skill {
  id          Int     @id @default(autoincrement())
  name        String  @unique @db.VarChar(255)
  description String?
  isActive    Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("skills")
}

model Ticket {
  id          Int     @id @default(autoincrement())
  subject     String  @db.VarChar(500)
  description String
  status      TicketStatus @default(new)
  tags        Json?   @default("[]")
  priority    Priority @default(normal)
  impact      Impact   @default(medium)
  urgency     Urgency  @default(normal)
  slaViolated Boolean  @default(false) @map("sla_violated")

  resolutionDue   DateTime? @map("resolution_due")
  resolutionDate  DateTime? @map("resolution_date")
  firstResponseTime Int?    @map("first_response_time")
  responseTime     Int?     @map("response_time")
  resolutionTime   Int?     @map("resolution_time")
  escalationCount  Int      @default(0) @map("escalation_count")

  // Relations
  requesterId  Int
  requester    User       @relation("UserTickets", fields: [requesterId], references: [id])
  assignedTechnicianId Int? @map("assigned_technician_id")
  assignedTechnician   Technician? @relation(fields: [assignedTechnicianId], references: [id])

  requiredSkills Json? @default("[]") @map("required_skills")
  tasks         Json? @default("[]")
  workLogs      Json? @default("[]") @map("work_logs")
  auditTrail    Json? @default("[]") @map("audit_trail")

  firstResponseAt DateTime? @map("first_response_at")
  resolvedAt      DateTime? @map("resolved_at")
  closedAt        DateTime? @map("closed_at")
  reopenedCount   Int       @default(0) @map("reopened_count")
  satisfactionRating Int?   @map("satisfaction_rating")
  score           Float? 
  justification   String?   @default("Severity: Medium")
  feedback        String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tickets")
}
